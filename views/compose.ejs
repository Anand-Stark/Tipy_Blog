<%- include('partials/header') %> 
    <h2>Compose Your Blog here !</h2>
<form action="/compose" method="post">
      <div class="form-group">
        <label for="headingArea">Title</label>
        <br>
        <input id="headingArea" name="postTitle">
      </input>
        </div>
        
        <div class="form-group">
        <label for="bigText"><strong>Post</strong> </label>
        <textarea class="form-control" id="bigText" rows="3" cols="30" name="postBody"></textarea>
      </div>
      <button type="submit" class="btn btn-success">Publish</button>
</form>
<%- include('partials/footer')  %> 

